@page
@model ERP.Pages.ProductType.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Fabric Type</h2>
<hr />

<div class="container">
    <div class="panel-group">
        <form method="post">

            <div class="panel panel-primary">
                <div class="panel-heading">Fabric Type</div>
                <div class="panel-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="FabricType.Type" class="control-label"></label>
                            <input asp-for="FabricType.Type" class="form-control" />
                            <span asp-validation-for="FabricType.Type" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="FabricType.Description" class="control-label"></label>
                            <input asp-for="FabricType.Description" class="form-control" />
                            <span asp-validation-for="FabricType.Description" class="text-danger"></span>
                        </div>
                    </div>





                </div>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">Actions</div>
                <div class="panel-body">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@page
@model ERP.Pages.MillView.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of registered mills [@Model.Mill.Count]</h2>

<p>
    <a asp-page="Create">Create New Mill</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mill[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mill[0].Code)
            </th>
            <th>
                @Html.DisplayName("MD")
            </th>
            <th>
                @Html.DisplayName("MD Cell")
            </th>
            <th>
                @Html.DisplayName("Manager")
            </th>
            <th>
                @Html.DisplayName("Manager Cell")
            </th>
            <th>
                @Html.DisplayName("CPM")
            </th>
            <th>
                @Html.DisplayName("CPM Cell")
            </th>
            <th>
                @Html.DisplayName("Mechanical Manager")
            </th>
            <th>
                @Html.DisplayName("Mechanical Manager Cell")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mill[0].City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Mill) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.PrimaryPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MangerPerson.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MangerPerson.PrimaryPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPMPerson.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPMPerson.PrimaryPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MechanicalPerson.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MechanicalPerson.PrimaryPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |

                @if (item.IsActive)
                {
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                }


                @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                {
                    if (!item.IsActive)
                    {
                        <a asp-page="./Delete" asp-route-id="@item.Id">Undo Delete</a>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>

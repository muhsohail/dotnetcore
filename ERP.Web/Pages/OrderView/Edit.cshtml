@page
@model ERP.Pages.OrderView.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.FabricId" class="control-label"></label>
                <select asp-for="Order.FabricId" class="form-control" asp-items="ViewBag.FabricId"></select>
                <span asp-validation-for="Order.FabricId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.MillId" class="control-label"></label>
                <select asp-for="Order.MillId" class="form-control" asp-items="ViewBag.MillId"></select>
                <span asp-validation-for="Order.MillId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.RegionId" class="control-label"></label>
                <select asp-for="Order.RegionId" class="form-control" asp-items="ViewBag.RegionId"></select>
                <span asp-validation-for="Order.RegionId" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Order.Id" />
            <div class="form-group">
                <label asp-for="Order.AmountEachPiece" class="control-label"></label>
                <input asp-for="Order.AmountEachPiece" class="form-control" />
                <span asp-validation-for="Order.AmountEachPiece" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ConsPcsYear" class="control-label"></label>
                <input asp-for="Order.ConsPcsYear" class="form-control" />
                <span asp-validation-for="Order.ConsPcsYear" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Order.ConsAmtYear" class="control-label"></label>
                <input asp-for="Order.ConsAmtYear" class="form-control" />
                <span asp-validation-for="Order.ConsAmtYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.NextOrder" class="control-label"></label>
                <input asp-for="Order.NextOrder" class="form-control" />
                <span asp-validation-for="Order.NextOrder" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Order.NextOrderCount" class="control-label"></label>
                <input asp-for="Order.NextOrderCount" class="form-control" />
                <span asp-validation-for="Order.NextOrderCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Order.IsActive" /> @Html.DisplayNameFor(model => model.Order.IsActive)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
